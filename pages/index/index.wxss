.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 50px;
}

.weather {
  margin-top: 20px;
  align-items: center;
  width: 300px;
  height: 300px;
  color: #333;
}

.weather-city {
  color: #000;
  margin-top: 30px;
}

.weather-state {
  color: #aaa;
  margin-top: 10px;
}

.weather-temp {
  color: #f00;
  margin-top: 10px;
}